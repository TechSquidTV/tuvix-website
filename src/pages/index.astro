---
import BaseLayout from "@/layouts/BaseLayout.astro";
import { Hero } from "@/components/Hero";
import { BentoGrid } from "@/components/BentoGrid";
import { getCollection } from "astro:content";
import { GITHUB_URL, FEED_URL } from "@/lib/constants";

// Get latest 3 posts for homepage
const allPosts = await getCollection("blog");
const latestPosts = allPosts
  .sort((a, b) => b.data.publishedDate.getTime() - a.data.publishedDate.getTime())
  .slice(0, 3);
---

<BaseLayout
  title="Tuvix - It's Your Feed"
  description="Take back control of your internet with Tuvix, the open-source RSS aggregator. No algorithms, no tracking—just your content, your way."
>
      {/* Hero Section */}
      <Hero client:visible />

      {/* Features Section */}
      <section class="bg-gray-50 py-16 sm:py-20">
        <div class="mx-auto max-w-7xl px-6 lg:px-8">
          <div class="mx-auto max-w-2xl text-center">
            <h2 class="text-3xl font-bold tracking-tight text-gray-900 sm:text-4xl">
              Your content, your rules
            </h2>
            <p class="mt-6 text-lg leading-8 text-gray-600">
              Escape the algorithm and read what you want, when you want it
            </p>
          </div>
          <div class="mx-auto mt-12 max-w-7xl">
            <BentoGrid client:load />
          </div>
        </div>
      </section>

      {/* Latest Blog Posts */}
      <section class="bg-white py-24 sm:py-32">
        <div class="mx-auto max-w-7xl px-6 lg:px-8">
          <div class="mx-auto max-w-2xl text-center">
            <h2 class="text-3xl font-bold tracking-tight text-gray-900 sm:text-4xl">
              From the blog
            </h2>
            <p class="mt-6 text-lg leading-8 text-gray-600">
              Latest tutorials and news from our team
            </p>
          </div>
          <div class="mx-auto mt-16 grid max-w-7xl grid-cols-1 gap-8 md:grid-cols-3">
            {
              latestPosts.map((post) => {
                const formattedDate = new Intl.DateTimeFormat("en-US", {
                  year: "numeric",
                  month: "long",
                  day: "numeric",
                }).format(post.data.publishedDate);

                return (
                  <a
                    href={`/blog/${post.slug}`}
                    class="group flex flex-col overflow-hidden rounded-xl bg-gray-50 shadow-md transition-all hover:shadow-xl"
                  >
                    {post.data.coverImage && (
                      <img
                        src={`/blog/${post.data.coverImage.startsWith("./") ? post.data.coverImage.slice(2) : post.data.coverImage}`}
                        alt={post.data.title}
                        class="aspect-video w-full object-cover transition-transform group-hover:scale-105"
                      />
                    )}
                    <div class="flex flex-1 flex-col p-6">
                      <div class="mb-3 flex items-center gap-3 text-sm">
                        <span class="rounded-full bg-orange-100 px-3 py-1 text-orange-600">
                          {post.data.category}
                        </span>
                        <time
                          datetime={post.data.publishedDate.toISOString()}
                          class="text-gray-600"
                        >
                          {formattedDate}
                        </time>
                      </div>
                      <h3 class="mb-2 text-lg font-bold text-gray-900 group-hover:text-orange-600">
                        {post.data.title}
                      </h3>
                      <p class="mb-4 flex-1 text-sm text-gray-600">
                        {post.data.description}
                      </p>
                      <div class="text-sm text-gray-500">By {post.data.author}</div>
                    </div>
                  </a>
                );
              })
            }
          </div>
          <div class="mt-12 text-center">
            <a
              href="/blog"
              class="inline-flex items-center text-base font-semibold text-gray-900 hover:text-gray-600"
            >
              View all posts
              <svg
                class="ml-2 h-5 w-5"
                fill="none"
                viewBox="0 0 24 24"
                stroke="currentColor"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
              </svg>
            </a>
          </div>
        </div>
      </section>

      {/* CTA Section */}
      <section class="bg-black py-24 sm:py-32">
        <div class="mx-auto max-w-7xl px-6 lg:px-8">
          <div class="mx-auto max-w-2xl text-center">
            <h2 class="text-3xl font-bold tracking-tight text-white sm:text-4xl">
              Ready to ditch the algorithm?
            </h2>
            <p class="mt-6 text-lg leading-8 text-gray-300">
              Start with our free hosted plan or self-host it yourself. No credit card, no BS.
            </p>
            <div class="mt-10 flex items-center justify-center gap-x-6">
              <a
                href={FEED_URL}
                class="rounded-md bg-white px-6 py-3 text-base font-semibold text-black shadow-sm hover:bg-gray-100 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-white"
              >
                Get It Free
              </a>
              <a
                href={GITHUB_URL}
                target="_blank"
                rel="noopener noreferrer"
                class="text-base font-semibold leading-7 text-white hover:text-gray-300"
              >
                View on GitHub <span aria-hidden="true">→</span>
              </a>
            </div>
          </div>
        </div>
      </section>
</BaseLayout>
