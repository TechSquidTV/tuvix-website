---
import BaseLayout from "@/layouts/BaseLayout.astro";
import { BlogTabs } from "@/components/BlogTabs";
import { getCollection } from "astro:content";

// Get all blog posts and sort by date
const allPosts = await getCollection("blog");
const sortedPosts = allPosts.sort(
  (a, b) => b.data.publishedDate.getTime() - a.data.publishedDate.getTime()
);

// Get hero post (first featured post or first post)
const heroPost = sortedPosts.find((post) => post.data.featured) || sortedPosts[0];

// Filter out hero post from grid
const gridPosts = sortedPosts.filter((post) => post.slug !== heroPost?.slug);

const categories = [
  { value: "all", label: "All" },
  { value: "tutorials", label: "Tutorials" },
  { value: "news", label: "News" },
];

const formatDate = (date: Date) => {
  return new Intl.DateTimeFormat("en-US", {
    year: "numeric",
    month: "long",
    day: "numeric",
  }).format(date);
};
---

<BaseLayout
  title="Blog - Tuvix"
  description="Tutorials, news, and updates about Tuvix RSS reader. Learn how to take control of your content consumption."
>
  <div class="bg-white">
    <div class="mx-auto max-w-7xl px-6 py-12 lg:px-8">
      {/* Hero Post */}
      {heroPost && (
        <article class="group relative mb-20 flex flex-col gap-6 lg:flex-row lg:items-center lg:gap-0">
          {/* Image - Separate from card */}
          {heroPost.data.coverImage && (
            <a
              href={`/blog/${heroPost.slug}`}
              class="flex-shrink-0 overflow-hidden rounded-3xl shadow-xl transition-all group-hover:shadow-2xl lg:w-[43rem]"
            >
              <img
                src={`/blog/${heroPost.data.coverImage.startsWith("./") ? heroPost.data.coverImage.slice(2) : heroPost.data.coverImage}`}
                alt={heroPost.data.coverAlt || heroPost.data.title}
                class="w-full object-cover transition-transform duration-500 group-hover:scale-105"
                style="aspect-ratio: 5 / 4;"
              />
            </a>
          )}

          {/* Text Card - Overlaps image on desktop */}
          <a
            href={`/blog/${heroPost.slug}`}
            class="rounded-3xl bg-white p-8 shadow-xl transition-all group-hover:shadow-2xl md:p-10 lg:absolute lg:right-0 lg:z-10 lg:w-[48rem] lg:p-12"
          >
            <div class="mb-4 flex items-center gap-3">
              <span class="inline-flex items-center rounded-full bg-orange-600 px-3 py-1 text-xs font-semibold text-white">
                {heroPost.data.category}
              </span>
              <time class="text-xs font-medium text-gray-500">
                {formatDate(heroPost.data.publishedDate)}
              </time>
            </div>
            <h1 class="mb-4 text-3xl font-bold leading-tight text-gray-900 transition-colors group-hover:text-orange-600 md:text-4xl lg:text-5xl">
              {heroPost.data.title}
            </h1>
            <p class="mb-6 text-base leading-relaxed text-gray-600 md:text-lg">
              {heroPost.data.description}
            </p>
            <div class="flex items-center justify-between border-t border-gray-200 pt-6">
              <div class="flex items-center gap-3">
                {heroPost.data.authorAvatar ? (
                  <img
                    src={heroPost.data.authorAvatar}
                    alt={heroPost.data.author}
                    class="h-10 w-10 rounded-full object-cover"
                  />
                ) : (
                  <div class="flex h-10 w-10 items-center justify-center rounded-full bg-orange-600 text-sm font-bold text-white">
                    {heroPost.data.author.charAt(0)}
                  </div>
                )}
                <div>
                  <p class="text-sm font-semibold text-gray-900">{heroPost.data.author}</p>
                  <p class="text-xs text-gray-500">Author</p>
                </div>
              </div>
              <div class="flex items-center gap-2">
                <span class="text-sm font-medium text-gray-900 group-hover:text-orange-600">
                  Read more
                </span>
                <svg
                  class="h-4 w-4 text-gray-900 transition-transform group-hover:translate-x-1 group-hover:text-orange-600"
                  fill="none"
                  viewBox="0 0 24 24"
                  stroke="currentColor"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width={2}
                    d="M17 8l4 4m0 0l-4 4m4-4H3"
                  />
                </svg>
              </div>
            </div>
          </a>
        </article>
      )}

      {/* Category Filter Tabs */}
      <BlogTabs categories={categories} client:load />

      {/* Grid Posts - Hidden initially, will be moved into tabs */}
      <div style="display: none;">
        {gridPosts.map((post) => (
          <a
            href={`/blog/${post.slug}`}
            data-category={post.data.category.toLowerCase()}
            class="blog-post group flex flex-col overflow-hidden rounded-xl bg-white shadow-md transition-all hover:shadow-xl"
          >
            {post.data.coverImage && (
              <img
                src={`/blog/${post.data.coverImage.startsWith("./") ? post.data.coverImage.slice(2) : post.data.coverImage}`}
                alt={post.data.coverAlt || post.data.title}
                class="aspect-video w-full object-cover transition-transform group-hover:scale-105"
              />
            )}
            <div class="flex flex-1 flex-col p-6">
              <div class="mb-3 flex items-center gap-3 text-sm">
                <span class="rounded-full bg-orange-100 px-3 py-1 text-orange-600">
                  {post.data.category}
                </span>
                <time class="text-gray-600">
                  {formatDate(post.data.publishedDate)}
                </time>
              </div>
              <h3 class="mb-2 text-lg font-bold text-gray-900 group-hover:text-orange-600">
                {post.data.title}
              </h3>
              <p class="mb-4 flex-1 text-sm text-gray-600">
                {post.data.description}
              </p>
              <div class="text-sm text-gray-500">By {post.data.author}</div>
            </div>
          </a>
        ))}
      </div>
    </div>
  </div>
</BaseLayout>
